<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/qb_px_204"
    android:layout_height="@dimen/qb_px_162"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/qb_px_5"
        app:cardElevation="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:background="#2A9FF6"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_32">
                <ImageView
                    android:layout_marginLeft="@dimen/qb_px_12"
                    android:layout_width="@dimen/qb_px_16"
                    android:layout_height="@dimen/qb_px_16"
                    android:src="@mipmap/notice_red"
                    />
                <ImageView
                    android:layout_marginLeft="@dimen/qb_px_8"
                    android:layout_width="@dimen/qb_px_16"
                    android:layout_height="@dimen/qb_px_16"
                    android:src="@mipmap/notice_red"
                    />
                <TextView
                    android:layout_marginLeft="@dimen/qb_px_13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6人"
                    android:textSize="12sp"
                    />
                <ImageView
                    android:layout_marginLeft="@dimen/qb_px_86"
                    android:layout_width="@dimen/qb_px_30"
                    android:layout_height="@dimen/qb_px_16"
                    android:src="@drawable/ic_more"
                    />

            </LinearLayout>

            <ImageView
                android:layout_marginTop="@dimen/qb_px_11"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/qb_px_52"
                android:layout_height="@dimen/qb_px_52"
                android:src="@drawable/ic_launcher"
                />
            <TextView
                android:layout_marginTop="@dimen/qb_px_2"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10月目标任务"
                android:textSize="16sp"
                android:textColor="#323232"
                />
            <TextView
                android:layout_marginTop="@dimen/qb_px_2"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="11"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="我们群里天下无敌牛逼拉萨啊啊啊"
                android:textSize="12sp"
                android:textColor="#969696 "
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>