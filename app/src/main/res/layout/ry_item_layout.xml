<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivItemHead"
            android:layout_width="@dimen/qb_px_40"
            android:layout_height="@dimen/qb_px_40"
            android:layout_margin="@dimen/qb_px_10"
            android:src="@mipmap/head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvChannelName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公共频道"
                    android:textColor="#323232"
                    android:textSize="@dimen/qb_px_16" />

                <ImageView
                    android:id="@+id/ivChannelIcon"
                    android:layout_width="@dimen/qb_px_60"
                    android:layout_height="@dimen/qb_px_20"
                    android:layout_marginLeft="@dimen/qb_px_12"
                    android:src="@drawable/pingdao" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/qb_px_15"
                    android:text="11.23"
                    android:textColor="#B4B4B4"
                    android:textSize="@dimen/qb_px_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvItemContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="田总：今天全部放假~~~"
                    android:textColor="#646464"
                    android:textSize="@dimen/qb_px_13" />

                <TextView
                    android:id="@+id/tvRedPointNum"
                    android:layout_width="@dimen/qb_px_18"
                    android:layout_height="@dimen/qb_px_18"
                    android:layout_marginRight="@dimen/qb_px_15"
                    android:background="@drawable/red_point_shape"
                    android:gravity="center"
                    android:padding="@dimen/qb_px_1"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qb_px_11" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/qb_px_165"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvHaveRed"
            android:layout_width="@dimen/qb_px_55"
            android:layout_height="match_parent"
            android:background="#DBDBDB"
            android:gravity="center"
            android:text="已读"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_14" />
        <TextView
            android:id="@+id/tvLike"
            android:layout_width="@dimen/qb_px_55"
            android:layout_height="match_parent"
            android:background="#FF953B"
            android:gravity="center"
            android:text="喜欢"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_14" />
        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="@dimen/qb_px_55"
            android:layout_height="match_parent"
            android:background="#FF4C0D"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_14" />
    </LinearLayout>
</LinearLayout>