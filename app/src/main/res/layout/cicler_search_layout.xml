<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_44"
    android:background="#EAEAF0"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/qb_px_12"
        android:layout_marginTop="@dimen/qb_px_5"
        android:layout_marginRight="@dimen/qb_px_12"
        android:layout_marginBottom="@dimen/qb_px_5"
        android:layout_weight="1"
        android:background="@drawable/cicler_search_shape"
        android:hint="搜索关键字"
        android:textColor="#DBDBDB"
        android:textSize="@dimen/qb_px_12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/qb_px_10"
        android:text="筛选"
        android:id="@+id/tvSelect"
        android:textColor="#646464"
        android:textSize="@dimen/qb_px_14" />

</LinearLayout>