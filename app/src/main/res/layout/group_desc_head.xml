<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_89">
    <LinearLayout
        android:layout_marginLeft="@dimen/qb_px_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/iv"
             android:layout_centerVertical="true"
             android:layout_width="@dimen/qb_px_40"
             android:layout_height="@dimen/qb_px_40"
             android:src="@drawable/ic_launcher"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/qb_px_12"
                android:layout_toRightOf="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <RelativeLayout
                        android:layout_marginTop="@dimen/qb_px_14"
                        android:layout_marginRight="@dimen/qb_px_15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="产品名字最长省略号asdsfdaf"
                            android:maxLength="11"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:textColor="#323232"
                            />
                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/qb_px_14"
                            android:layout_width="@dimen/qb_px_12"
                            android:layout_height="@dimen/qb_px_12"
                            android:src="@drawable/more"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="@dimen/qb_px_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/group_blue"
                            android:text="公共频道"
                            android:textColor="#2A9FF6"
                            android:textSize="10sp"
                            />

                        <TextView
                            android:layout_marginTop="@dimen/qb_px_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20人"
                            android:layout_marginLeft="@dimen/qb_px_6"
                            android:textColor="#646464"
                            android:textSize="12sp"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/qb_px_10"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/group_desc"
            />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>